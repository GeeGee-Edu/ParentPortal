<%- partial ('header.ejs') %>

<div class="pure-g">
  <div class"pure-u-1">
    <h1 class="content-head is-center">Attendance</h1>
  </div>
</div>
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-2">

  </div>
  <div class="pure-g" ng-app="attendApp">
    <div class="pure-u-1 pure-u-md-1-2" ng-controller="MemberController">
      <button class="pure-button" ng-repeat="cohort in cohortMembers.uniqueCohorts"
              ng-click="cohort.selected = !cohort.selected"
              ng-class="{true:'button-success', false:'button-error'}[cohort.selected]">
        {{cohort.name}}
      </button>
      <hr>
      <div class="pure-u-1 is-center" >

      </div>
      Search <input ng-model="studentName">
      <hr>
      <div ng-show="filteredItems.length">
        <table class="pure-table">
        <thead>
          <tr>
            <th>Name</th>
            <th ng-repeat="day in days">
              {{day}}
            </th>
            <th>Today</th>
          </tr>
        </thead>

        <tbody>
          <tr ng-repeat="member in filteredItems =
                        (cohortMembers.data | filter:cohortFilter | filter:studentFilter | orderBy:'fullname')"
              ng-class-even="'pure-table-odd'">
            <td>{{member.fullname}}</td>
            <td ng-repeat="day in days">
            </td>
            <td>
              <button class="pure-button button-success">x</button>
            </td>
          </tr>

        </tbody>
      </table>
    </div>
    <div ng-hide="filteredItems.length">
      There are no students matching your search criteria.
    </div>
    </div>
  </div>
</div>
